{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "outDir": "./build",
    "target": "ES2020",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "ES2020",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  }
}